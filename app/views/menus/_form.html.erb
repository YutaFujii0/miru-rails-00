<%= simple_form_for @menu, html: {enctype: "multipart/form-data"}, remote: true do |f| %>
  <div id="form-container">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= f.label :menu_photo, label: 'take picture', class: "labeling" %>
    <%= f.input :photo, capture: "camera", accept: "image/*", class: "form-control upload"  %>
    <%= f.submit class: "btn btn-secondary", value: "Upload" %>
  </div>
<% end %>
